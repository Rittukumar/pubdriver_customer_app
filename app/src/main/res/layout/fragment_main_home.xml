<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oceanstyxx.pubdriver.fragment.MainHomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:id="@+id/textViewBookingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_main_booking_home_fragment"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#04C1F9"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Now you can book your driver and drive away with your own car any time anywhere in Bangalore."
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking a driver from PubDriver app is fairly simple. Simply follow two steps process to get the driver."
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Within one hour the driver will be there at your doorstep."
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SO WHAT YOUR ARE WAITING FOR...."
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

        <Button
            android:id="@+id/btnBookDriver"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="BOOK YOUR DRIVER"
            android:textSize="25dp"
            android:textStyle="bold"
            android:background="@drawable/my_button_bg"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Rates:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:paddingTop="5dp"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">Peek Hours [7AM - 10AM and 5PM - 9PM]: First hour RS 150 and additional every minutes RS. 3"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">Normal Hours [10AM - 5PM]: First hour RS 100 and additional every minutes RS. 2.5"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">Night Hours [10PM - 6AM]: First hour RS 250 and additional every minutes RS. 4"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            />

    </LinearLayout>
</FrameLayout>
